<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:padding="10dp"
    tools:context=".Dashboard.CheckOut">


    <TextView
        android:id="@+id/titleCO"
        style="@style/Buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bt_customize_shape"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Check Out"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center_vertical|center_horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/titleCO" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleSP"
            style="@style/Buttons"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/customizebutton"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/total"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyNowButton"
            style="@style/Buttons"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/clear_button"
            android:background="@drawable/customizebutton"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Order Now">


        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>




</RelativeLayout>